#Librerie
import random
import requests
import time
from bs4 import BeautifulSoup
import logging
from bs4 import BeautifulSoup
import pandas as pd
from tqdm import tqdm
from time import sleep
from random import randint
from requests.exceptions import ConnectionError, Timeout, ReadTimeout

